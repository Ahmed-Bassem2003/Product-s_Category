@model User

@{
    Layout = "~/Views/Shared/_Login.cshtml";
}

<div class="d-flex justify-content-center">
    <h2 class="text-success">Login</h2>
</div>

<br />

<br />
<hr />
<br />


<form asp-action="Login">

    <div class="form-group mt-5">
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" class="form-control" />
    </div>

    <div class="form-group mt-5">
        <label asp-for="Password" class="form-label"></label>
        <input asp-for="Password" class="form-control" />
    </div>

    <div class="text-center mt-4">
        <p class="text-muted">
            Don't have an account?
            <a asp-controller="User" asp-action="Register" class="text-decoration-none">Register</a>
        </p>
    </div>

      <div class="d-flex justify-content-center gap-3 m-5">
        <input type="submit" value="Login" class="btn btn-success" />
       @*  <a asp-controller="Product" asp-action="Index" class="btn btn-secondary">Cancel</a> *@ 


    </div> 

</form>

